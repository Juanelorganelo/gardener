{
  // Include everything in source
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    // Use tslib for better performance
    "importHelpers": true,
    "outDir": "lib",
    // Type-checking options and compile-time checks
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // Output ES version
    "target": "es2019",
    // Module resolution
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
